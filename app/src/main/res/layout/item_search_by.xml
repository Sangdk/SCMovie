<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.t3h.scmovie.model.SearchBy" />

        <variable
            name="listener"
            type="com.t3h.scmovie.fragment.search.SearchByItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/dp_13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_trans_20"
            android:onClick="@{v->listener.onSearchByItemClick(item)}"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <TextView
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@{item.name}"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>